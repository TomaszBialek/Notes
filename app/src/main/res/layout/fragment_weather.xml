<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/currentWeatherResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/item_margin_small"
        android:layout_marginTop="@dimen/item_margin_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/text_size_large"
        android:text="Current Weather" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/currentWeatherResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_margin_default"
        android:layout_marginEnd="@dimen/item_margin_small"
        android:layout_marginTop="@dimen/item_margin_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentWeatherResultText"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/hourlyWeatherResultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_margin_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentWeatherResult"
        android:textSize="@dimen/text_size_large"
        android:text="Hourly Weather" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hourlyWeatherResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_margin_default"
        android:layout_marginEnd="@dimen/item_margin_small"
        android:layout_marginTop="@dimen/item_margin_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hourlyWeatherResultText"
        android:textSize="@dimen/text_size_medium" />

</androidx.constraintlayout.widget.ConstraintLayout>