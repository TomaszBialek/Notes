<resources>

    <!-- Base application theme. -->
    <style name="AppThemeWhite" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@color/primaryText</item>

        <item name="primaryTextColor">@color/primaryText</item>
        <item name="buttonColor">@color/colorPrimary</item>
        <item name="navigationBarColor">@color/colorPrimaryDark</item>
        <item name="navigationBarSelectedItemColor">@color/black</item>
        <item name="navigationBarNotSelectedItemColor">@color/white</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/mintColorPrimary</item>
        <item name="colorPrimaryDark">@color/mintColorPrimaryDark</item>
        <item name="colorAccent">@color/mintColorAccent</item>
        <item name="android:actionBarStyle">@color/mintPrimaryText</item>

        <item name="primaryTextColor">@color/mintPrimaryText</item>
        <item name="buttonColor">@color/mintColorPrimary</item>
        <item name="navigationBarColor">@color/mintColorPrimaryDark</item>
        <item name="navigationBarSelectedItemColor">@color/black</item>
        <item name="navigationBarNotSelectedItemColor">@color/white</item>
    </style>

